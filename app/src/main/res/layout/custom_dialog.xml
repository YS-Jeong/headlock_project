<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="15dp">


    <TextView
        android:id="@+id/option_codetype_dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="0dp"
        android:text="만나서 반가워요!"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dialog_numbers_bottom_layout"
        android:layout_below="@+id/option_codetype_dialog_title_tv"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="지금 회원가입하고, 할인쿠폰을 받으세요" />

    <LinearLayout
        android:id="@+id/dialog_numbers_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:minHeight="56dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/join_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="회원가입"
            app:backgroundTint="#FF1B73" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="로그인"
            app:backgroundTint="#FF1b73" />

    </LinearLayout>

</RelativeLayout>